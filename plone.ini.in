[app:plone]
use = egg:Zope2#main
zope_conf = ${plone:location}/etc/zope.conf

[pipeline:main]
pipeline =
    egg:repoze.retry#retry
    egg:repoze.tm2#tm
    egg:repoze.vhm#vhm_xheaders
    plone

[server:main]
use = egg:paste#http

# Begin logging configuration

[loggers]
keys = root, vanity_app

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = WARN
handlers = console

[logger_vanity_app]
level = WARN
handlers =
qualname = vanity_app

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
