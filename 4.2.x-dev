[buildout]
auto-checkout = *
extends = http://pythonpackages.com/buildout/plone/4.2.x
extensions += 
    buildout.dumppickedversions
    mr.developer
parts +=
    omelette
    zopepy
    test

[omelette]
recipe = collective.recipe.omelette
eggs = ${plone:eggs}

[plone]
#debug-mode = on
verbose-security = on
eggs +=
    Products.DocFinderTab
    Products.FSDump
    plone.app.debugtoolbar

[zopepy]
recipe = zc.recipe.egg
eggs = ${plone:eggs}
interpreter = zopepy

[test]
recipe = zc.recipe.testrunner
eggs = ${plone:eggs}
