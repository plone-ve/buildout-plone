[buildout]
auto-checkout = *
extends = http://pythonpackages.com/buildout/plone/4.2.x
extensions += 
    buildout.dumppickedversions
    mr.developer
parts +=
    omelette
    python
    test

[omelette]
eggs = ${plone:eggs}
recipe = collective.recipe.omelette

[plone]
eggs +=
    Products.DocFinderTab
    Products.FSDump
    ZopeSkel
    plone.app.debugtoolbar
scripts = paster
verbose-security = on

[python]
# A Python interpreter with Plone in the sys.path
eggs = ${plone:eggs}
interpreter = python
recipe = zc.recipe.egg

[test]
eggs = ${plone:eggs}
recipe = zc.recipe.testrunner

[versions]
ZopeSkel = 2.21.2
