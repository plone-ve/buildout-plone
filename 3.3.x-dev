[buildout]
auto-checkout = *
extends = http://build.pythonpackages.com/buildout/plone/3.3.x
extensions +=
    buildout.dumppickedversions
    mr.developer
parts +=
    omelette
    zopepy

[omelette]
recipe = collective.recipe.omelette
eggs = ${plone:eggs}
packages = ${zope2:location}/lib/python
products = ${plone:products}

[plone]
debug-mode = on
verbose-security = on
eggs +=
    Products.DocFinderTab
    Products.FSDump

[zopepy]
recipe = zc.recipe.egg
eggs = ${plone:eggs}
interpreter = zopepy
extra-paths = ${zope2:location}/lib/python

[versions]
zc.recipe.egg = 1.3.2
