[buildout]
extends = 
    https://raw.github.com/pythonpackages/buildout-plone/master/base.cfg
    http://dist.plone.org/release/4.3a2/versions.cfg
parts +=
    development-conf
    mod-wsgi
    production-conf

[development-conf]
recipe = collective.recipe.template
url = http://pythonpackages.com/buildout/plone/conf/plone-paste.ini.in
output = ${buildout:directory}/development.ini

[mod-wsgi]
recipe = collective.recipe.modwsgi
eggs = ${plone:eggs}
config-file = ${buildout:directory}/plone-mod-wsgi.ini

[plone]
eggs +=
    PasteScript
    WebError
    repoze.retry
    repoze.tm2
    repoze.vhm
user = admin:admin
scripts = paster

[production-conf]
recipe = collective.recipe.template
url = http://pythonpackages.com/buildout/plone/conf/plone-mod-wsgi.ini.in
output = ${buildout:directory}/production.ini
